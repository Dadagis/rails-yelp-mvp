<h1>Create a new restaurant</h1>

<div class="container">
  <%= simple_form_for @restaurant do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :category %>
    <%= f.input :phone_number %>
    <%= f.submit %>
  <% end %>
  <hr>
<%= link_to "Cancel", restaurants_path, class: "btn btn-primary" %>
</div>


